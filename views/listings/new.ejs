<% layout("layouts/boilerplate") %>
<body>
    <div class="row">
    <div class="col-8 offset-2">
        <br> <br>
        <h2>Create a New Listing</h2>
        <form method="post" action="/listing">
            <div class="mb-3">
                <label for="title" class="form-label">Title</label>
                <input name="listing[title]" type="text" class="form-control" placeholder="enter a title">
            </div>

            <div class="mb-3">
                <label for="description" class="form-label">Description</label>
                <textarea name="listing[description]" class="form-control" > </textarea>
            </div>

        <div class="row">
            <div class="mb-3 col-md-4">
                <label for="price" class="form-label">Price</label>
                <input name="listing[price]" type="number" class="form-control" placeholder="1200">
            </div>
            <div class="mb-3 col-md-8">
                <label for="country" class="form-label">Country</label>
                <input name="listing[country]" type="text" class="form-control" placeholder="India">
            </div>
        </div>

            <div class="mb-3">
                <label for="location" class="form-label">Location</label>
                <input name="listing[location]" type="text" class="form-control" placeholder="Delhi">
            </div>

            <div class="mb-3">
                <label for="image" class="form-label">Image</label>
                <input name="listing[image]" type="text" class="form-control" placeholder="enter image/URL link">
            </div>
            <br> <br>
            <button class="btn btn-dark add-btn"> Add </button>
            <br> <br>
        </form>
    </div>
    </div>
</body>
